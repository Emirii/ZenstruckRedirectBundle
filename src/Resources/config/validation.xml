<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                    http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Zenstruck\RedirectBundle\Model\Redirect">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="message">zenstruck_redirect.source.unique</option>
            <option name="fields">source</option>
        </constraint>
        <property name="source">
            <constraint name="NotBlank">
                <option name="message">zenstruck_redirect.source.blank</option>
            </constraint>
        </property>
        <property name="statusCode">
            <constraint name="Choice">
                <option name="message">zenstruck_redirect.status_code.invalid</option>
                <option name="choices">
                    <value>301</value>
                    <value>302</value>
                    <value>404</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
